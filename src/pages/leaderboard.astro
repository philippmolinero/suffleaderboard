  <style>
      body {
          margin: 0;
          font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
          min-height: 100vh;
          background: linear-gradient(to bottom, #020617, #0f172a);
          color: #fff;
      }

      .container {
          padding: 24px;
          display: flex;
          flex-direction: column;
          align-items: center;
      }

      .content {
          width: 100%;
          max-width: 896px;
          margin-bottom: 24px;
      }

      .header {
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 12px;
          margin-bottom: 32px;
      }

      .title {
          font-size: 2.25rem;
          font-weight: 700;
          background: linear-gradient(to right, #fff, #cbd5e1);
          -webkit-background-clip: text;
          background-clip: text;
          color: transparent;
      }

      .card {
          border: 1px solid #1e293b;
          border-radius: 8px;
          background: rgba(15, 23, 42, 0.5);
          backdrop-filter: blur(12px);
          -webkit-backdrop-filter: blur(12px);
      }

      table {
          width: 100%;
          border-collapse: collapse;
      }

      th, td {
          padding: 12px;
          text-align: left;
          border-bottom: 1px solid #1e293b;
      }

      th {
          color: #cbd5e1;
          font-weight: 500;
      }

      tr:hover {
          background: rgba(30, 41, 59, 0.5);
      }

      .rank-cell {
          display: flex;
          align-items: center;
          gap: 8px;
      }

      .medal-gold {
          color: #eab308;
      }

      .medal-silver {
          color: #94a3b8;
      }

      .medal-bronze {
          color: #92400e;
      }

      .top-three {
          color: #e2e8f0;
      }

      .default-text {
          color: #94a3b8;
      }

      .jokers {
          display: flex;
          gap: 4px;
      }

      .positive-balance {
          color: #f87171;
      }

      .zero-balance {
          color: #4ade80;
      }
  </style>
</head>
